# Contributor: Gaute Hope <eg@gaute.vetsj.com>
# based on rbutilqt-svn by Georgij Kondratjev <smpuj@bk.ru>
pkgname=rbutilqt-bin
pkgver=1.0.7
pkgrel=2
pkgdesc="Qt Rockbox Utility. It can install and uninstall Rockbox, bootloader, fonts, themes."
arch=("i686")
url="http://www.rockbox.org/twiki/bin/view/Main/RockboxUtilityQt"
license=("GPL")
depends=("qt4>=4.3.0" "libusb")
provides=(rbutilqt)
conflicts=(rbutilqt)
makedepends=()
source=('http://download.rockbox.org/rbutil/linux/rbutilqt-v1.0.7.tar.bz2')
md5sums=('c77111ee3fd1312b9738b5eabe978e5b')


build() {
	cd ${srcdir}/rbutilqt-v${pkgver}
	
	install -Dm755 rbutilqt ${startdir}/pkg/usr/bin/rbutilqt

}

