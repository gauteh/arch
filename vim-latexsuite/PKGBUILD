# Maintainer : Weng Xuetian <hurricanek@126.com>

pkgname=vim-latexsuite
pkgver=20100129
_pkgver=1.8.23-20100129-r1104
pkgrel=2
pkgdesc="vim-latexsuite attempts to provide a comprehensive set of tools to view, edit and compile LaTeX documents in Vim. Together, they provide tools starting from macros to speed up editing LaTeX documents to functions for forward searching .dvi documents. "
arch=(i686 x86_64)
url="http://vim-latex.sourceforge.net/index.phpi"
depends=('vim')
groups=('vim-plugins')
source=("http://downloads.sourceforge.net/project/vim-latex/snapshots/vim-latex-${_pkgver}.tar.gz" license.txt 01-redef-C-j-C-g.patch)
license=('custom:vim')
optdepends=('texlive-bin')
install=('vim-latexsuite.install')

build()
{
  cd $srcdir/vim-latex-${_pkgver}
  patch -p1 < $srcdir/01-redef-C-j-C-g.patch
  make DESTDIR="${pkgdir}" PREFIX='/usr' VIMDIR='/usr/share/vim/vimfiles' install || return 1

  mkdir -p ${pkgdir}/usr/share/licenses/vim-latexsuite/ || return 1
  install -Dm755 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/vim-latexsuite/ || return 1

}
md5sums=('1d8e6a05a2e07245d22f1afbae474f5e'
         'cd49910a3dde6fe0a7e24ebe8cbf7066'
         'd0b87bcb75b3c7b34a847af8c5bb42e2')
